
<div class="box100">
  <div class="box post1">
    <% @posts.each do |post| %>
    <div class="post" value="<%=post.id%>" data-id="<%=post.id%>">
      <h2>
        <!-- post id  -->
        <%if post.id %>
          <%= post.id %>
        <%end %>
        <!-- post title -->
        <h2 class="title line-on-right"></h2>
        <p><%= post.title %></p>
        <% if post.user %>  
          <p><%= post.user.name%></p>
        <% end %>
      </h2>
      <div id="amout-likes-js">
        Likes: 
        <% if post.votes.count %>
        <p class="like-count-js"><%= post.votes.count %></p>
        <% end %>
      </div>
      <button class="like-js" data-id="post.id">Like post</button>
      <%#= button_to "create", vote, method: :create %>
      <div><%= link_to "view post", post_path(post.id) %></div>
      <% if post.images.first %>  
        <div class="image-style">
          <%= image_tag post.images.last.avatar.url%>
        </div>
      <% end %>
      <h3>Add comment</h3>
      <button class="new-comment-js">New comment</button>
      <div class="comment-form">
      <%= form_for @comment do |f| %>
        <%= f.text_field :title %>
        <%= f.text_field :text %>
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.submit "Create" %>
      <% end %>
      </div>
      <h3>Comments
        <p class="ajax-comments"></p>
      </h3>

      <% post.comments.each do |comment| %>
        <p>
          <p>User =<%= comment.user.name %></p>
          <strong class="comment-title-js">
            <%= comment.title %>
          </strong> 
          <%= comment.text %>
        </p>
      <% end %>
    </div>

    <% end %>

  <%# @images.each do |image| %>
    <%#= image[:tempfile] %>
  <%# end %>

  </div>
</div>



