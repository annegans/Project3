
<div class="log-in-box">
  <h2 class="sign-up-text">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field text-font">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, :class => "box-style-log-in" %>   
    </div>

    <div class="field text-font">
      <%= f.label :country %><br />
      <%= f.text_field :country, autofocus: true, :class => "box-style-log-in" %>   
    </div>

    <div class="field text-font">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => "box-style-log-in" %>
    </div>

    <div class="field text-font">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "box-style-log-in" %>
    </div>

    <div class="field text-font">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "box-style-log-in"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "sign-up-botton"%>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
